# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置 (MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=trading_analyzer
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# 交易所API配置
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET=your_binance_secret

# OKX
OKX_API_KEY=your_okx_api_key
OKX_SECRET=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

# 监控配置
PRICE_UPDATE_INTERVAL=30000
INDICATORS_UPDATE_INTERVAL=300000
MAX_PRICE_HISTORY_LENGTH=1000
PRICE_ANOMALY_THRESHOLD=5
WATCHED_SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT,ADA/USDT,SOL/USDT

# 技术指标配置
RSI_PERIOD=14
SMA_PERIODS=20,50
EMA_PERIODS=12,26
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_MULTIPLIER=2
STOCHASTIC_K=14
STOCHASTIC_D=3
ATR_PERIOD=14
WILLIAMS_R_PERIOD=14
CCI_PERIOD=20

# 交易信号配置
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70
BULLISH_SIGNAL_THRESHOLD=0.6
BEARISH_SIGNAL_THRESHOLD=0.4

# 套利配置
MIN_PROFIT_PERCENTAGE=0.5
MAX_OPPORTUNITIES=20

# 风险管理配置
DEFAULT_STOP_LOSS_PERCENTAGE=5
DEFAULT_TAKE_PROFIT_PERCENTAGE=10
MAX_POSITION_SIZE=1000
RISK_PER_TRADE=2

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Redis缓存配置 (可选)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=trading:
CACHE_PRICES_TTL=30
CACHE_INDICATORS_TTL=300
CACHE_ARBITRAGE_TTL=60

# API配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests from this IP
CORS_ORIGIN=*
CORS_CREDENTIALS=false
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# WebSocket配置
WS_CORS_ORIGIN=*
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000

# 通知配置
# Telegram Bot
TELEGRAM_BOT_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email
EMAIL_ENABLED=false
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com

# Webhook
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your_webhook_secret
