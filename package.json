{
  "name": "crypto-trading-analyzer",
  "version": "1.0.0",
  "description": "基于Node.js和CCXT的加密货币交易分析系统，集成AI预测和智能交易策略",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "analysis",
    "ccxt",
    "ai",
    "prediction"
  ],
  "author": "PrettyKing",
  "license": "MIT",
  "dependencies": {
    "@types/mongodb": "^4.0.6",
    "axios": "^1.6.2",
    "ccxt": "^4.3.74",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.19.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "socket.io": "^4.7.5",
    "winston": "^3.11.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
